{
  "name": "payments-app",
  "private": true,
  "version": "0.0.0",
  "description": "Playground Node.js application.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --ext ts --exec ts-node src/index ",
    "build": "rimraf dist/* && tsc",
    "start": "NODE_ENV=production node .",
    "lint": "yarn tslint --project . --fix",
    "format": "yarn prettier --write .",
    "test": "NODE_ENV=test yarn jest --watch",
    "db:migrate": "yarn knex migrate:latest",
    "db:rollback": "yarn knex migrate:rollback",
    "db:seed:demo": "yarn knex seed:run --specific=demo.ts"
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn format",
      "yarn lint"
    ],
    "*.{json,yaml,md}": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "apollo-server-express": "^2.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "knex": "^0.21.12",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/graphql": "^14.5.0",
    "@types/node": "^14.14.8",
    "apollo-server-testing": "^2.19.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "nsql": "^0.1.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  }
}
