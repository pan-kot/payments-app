{
  "name": "payments-app",
  "private": true,
  "version": "0.0.0",
  "description": "Playground Node.js application.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --ext ts --exec ts-node src/index ",
    "build": "rimraf dist/* && tsc",
    "start": "NODE_ENV=production node .",
    "lint": "yarn tslint --project . --fix",
    "format": "yarn prettier --write .",
    "test": "NODE_ENV=test echo No tests implemented yet."
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn format",
      "yarn lint"
    ],
    "*.{json,yaml,md}": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.8",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  }
}
